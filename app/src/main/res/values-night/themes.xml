    <style name="Base.Theme.ShienSys" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/bgdark</item>
        <item name="colorSurface">@color/carddark</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/accentdark</item>
        <item name="colorPrimaryContainer">@color/carddark</item>
        <item name="colorOnPrimary">@color/whitedark</item>

        <!-- Text Colors -->
